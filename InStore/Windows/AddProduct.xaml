<Window x:Class="InStore.Windows.AddProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InStore.Windows"
        mc:Ignorable="d"
        Title="AddProduct" Height="300" Width="450">
    <Grid>
        <Label Content="Название:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,80,0,0"/>
        <TextBox x:Name="NameTXB" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,80,0,0" Width="200"/>
        <Label Content="Категория:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,120,0,0"/>
        <ComboBox x:Name="Category" VerticalAlignment="Center" Margin="150,0,150,0" DisplayMemberPath="Названии_категории_товара"/>
        <Label Content="Цена:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,160,0,0"/>
        <TextBox x:Name="PriceTXB" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,160,0,0" Width="200" />
        <Button Content="Добавить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,218,0,0" Width="134" Height="39" Click="AddButton_Click"/>
        <Button Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="91,218,0,0" Width="134" Height="39" Click="BackButton_Click"/>
    </Grid>
</Window>
